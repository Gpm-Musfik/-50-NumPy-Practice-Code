        "# NumPy - Conditional Indexing\n",
        "import numpy as np\n",
        "\n",
        "# Creating an array\n",
        "array = np.array([1, 2, 3, 4, 5, 6])\n",
        "\n",
        "# Setting elements that satisfy a condition\n",
        "array[array % 2 == 0] = -1  # Set even numbers to -1\n",
        "\n",
        "print('Array after Conditional Indexing:', array)"
